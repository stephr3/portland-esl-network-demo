<%= form_tag admin_path, method: 'post' do%>
  <h3>Class Location</h3>
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, class: "form-control" %>
  <%= label_tag :region %>
  <%= select_tag :region, options_for_select(['', 'Clark County', 'Downtown', 'Gresham', 'North/Northeast', 'Other Areas', 'South/Southeast', 'Southwest', 'Washington County']), {class: "form-control"} %>
  <%= label_tag :address %>
  <%= text_field_tag :address, nil, class: "form-control" %>
  <%= label_tag :city %>
  <%= text_field_tag :city, nil, class: "form-control" %>
  <%= label_tag :state %>
  <%= select_tag :state, options_for_select(['', 'OR', 'WA']), {class: "form-control"} %>
  <%= label_tag :zip, 'Zip Code' %>
  <%= text_field_tag :zip, nil, class: "form-control" %>
  <h3>Contact Information</h3>
  <%= label_tag :contact, 'Contact Name' %>
  <%= text_field_tag :contact, nil, class: "form-control" %>
  <%= label_tag :phone %>
  <%= telephone_field_tag :phone, nil, class: "form-control" %>
  <%= label_tag :email %>
  <%= email_field_tag :email, nil, class: "form-control" %>
  <%= label_tag :url, 'Website URL' %>
  <%= url_field_tag :url, nil, class: "form-control" %>
  <h3>About the Class</h3>
  <%= label_tag :class_resource, 'Is this a class or resource?' %>
  <%= select_tag :class_resource, options_for_select(['', 'Class', 'Resource']), {class: "form-control"} %>
  <%= label_tag :site_type, 'What type of site is it?' %>
  <%= select_tag :site_type, options_for_select(['', 'Church', 'Community College or University', 'For-Profit Business', 'Library', 'Public School', 'Social Service/Government/Non-Profit']), {class: "form-control"} %>
  <%= label_tag :description, 'Description of Class' %>
  <%= text_area_tag :description, nil, class: "form-control" %>
  <%= label_tag :happening_now, 'Is the class happening now?' %>
  <%= select_tag :happening_now, options_for_select(['', 'Yes', 'No']), {class: "form-control"} %>
  <%= label_tag :summer_classes, 'Does this site offer classes during the summer?' %>
  <%= select_tag :summer_classes, options_for_select(['', 'Yes', 'No']), {class: "form-control"} %>
  <%= label_tag :students_served, 'How many students are served yearly at this site?' %>
  <%= number_field_tag :students_served, nil, class: "form-control" %>
  <%= label_tag :notes, 'Do you have anything else you want to add?' %>
  <%= text_area_tag :notes, nil, class: "form-control" %>
  <%= submit_tag 'Submit Class', :class => "btn btn-primary" %>
<% end %>
